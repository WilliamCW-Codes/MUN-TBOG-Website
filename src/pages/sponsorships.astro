---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
            <div class="center-content">
            <div style="text-align: center; border-bottom: 1px solid #ffffff; width: 80vw;">
                <h1>Sponsorships</h1>
            </div>
            <div style="text-align: center;">
                <h2>Platinum</h2>
            </div>
            <div style="text-align: center;">
                <h2>Gold</h2>
            </div>
            <div style="text-align: center;">
                <h2>Sliver</h2>
            </div>			
            <div style="text-align: center;">
                <h2>Bronze</h2>
            </div>	
                <h2>Sponsorship Package</h2>
                <script src="https://static.elfsight.com/platform/platform.js" data-use-service-core defer></script>
                <div class="elfsight-app-35469dd3-1c2b-4d58-8835-d92a8c365730" data-elfsight-app-lazy></div>
            </div>
        </main>
		<Footer />
	</body>
</html>

<style>
.center-content {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin: 20px 0; /* Add 20px of vertical space between elements */
}

.center-content h2 {
    margin: 20px 0; /* Add 20px of vertical space between elements */
    padding: 10px;
}

.center-content p {
    margin: 20px 0; /* Add 20px of vertical space between elements */
    padding: 10px;
}
</style>